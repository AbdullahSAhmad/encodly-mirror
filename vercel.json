{
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "apps/main-site/dist",
  "functions": {
    "apps/*/dist/**": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/base64-converter",
      "dest": "/apps/base64-converter/dist/index.html"
    },
    {
      "src": "/base64-converter/(.*)",
      "dest": "/apps/base64-converter/dist/$1"
    },
    {
      "src": "/hash-generator",
      "dest": "/apps/hash-generator/dist/index.html"
    },
    {
      "src": "/hash-generator/(.*)",
      "dest": "/apps/hash-generator/dist/$1"
    },
    {
      "src": "/json-formatter",
      "dest": "/apps/json-formatter/dist/index.html"
    },
    {
      "src": "/json-formatter/(.*)",
      "dest": "/apps/json-formatter/dist/$1"
    },
    {
      "src": "/jwt-decoder",
      "dest": "/apps/jwt-decoder/dist/index.html"
    },
    {
      "src": "/jwt-decoder/(.*)",
      "dest": "/apps/jwt-decoder/dist/$1"
    },
    {
      "src": "/jwt-encoder",
      "dest": "/apps/jwt-encoder/dist/index.html"
    },
    {
      "src": "/jwt-encoder/(.*)",
      "dest": "/apps/jwt-encoder/dist/$1"
    },
    {
      "src": "/md-viewer",
      "dest": "/apps/md-viewer/dist/index.html"
    },
    {
      "src": "/md-viewer/(.*)",
      "dest": "/apps/md-viewer/dist/$1"
    },
    {
      "src": "/password-generator",
      "dest": "/apps/password-generator/dist/index.html"
    },
    {
      "src": "/password-generator/(.*)",
      "dest": "/apps/password-generator/dist/$1"
    },
    {
      "src": "/percentage-calc",
      "dest": "/apps/percentage-calc/dist/index.html"
    },
    {
      "src": "/percentage-calc/(.*)",
      "dest": "/apps/percentage-calc/dist/$1"
    },
    {
      "src": "/qr-generator",
      "dest": "/apps/qr-generator/dist/index.html"
    },
    {
      "src": "/qr-generator/(.*)",
      "dest": "/apps/qr-generator/dist/$1"
    },
    {
      "src": "/regex-tester",
      "dest": "/apps/regex-tester/dist/index.html"
    },
    {
      "src": "/regex-tester/(.*)",
      "dest": "/apps/regex-tester/dist/$1"
    },
    {
      "src": "/url-converter",
      "dest": "/apps/url-converter/dist/index.html"
    },
    {
      "src": "/url-converter/(.*)",
      "dest": "/apps/url-converter/dist/$1"
    },
    {
      "src": "/uuid-generator",
      "dest": "/apps/uuid-generator/dist/index.html"
    },
    {
      "src": "/uuid-generator/(.*)",
      "dest": "/apps/uuid-generator/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/main-site/dist/$1"
    }
  ]
}